//---------------------------------
//------- deviceAlert -------------
//---------------------------------

use deviceAlert
db.createCollection("deviceAlert")
sh.enableSharding("deviceAlert")

//-- shard+partition empty collection (deviceAlert)
db.adminCommand({shardCollection:"deviceAlert.deviceAlert",key:{"accountId": 1, "deviceId": 1},partitionKey:{dayStamp:1,_id:1},clustering:false})
		 
//-- disable Balancer prior to pre-splitting and manual chunk migrations
sh.disableBalancing("deviceAlert.deviceAlert")

//-- presplit chunks
for (var i =0; i <=106000; ++i) {
		sh.splitAt("deviceAlert.deviceAlert",{"accountId": i, "deviceId": 1})
	}

//-- move chunks
for (var i =0; i <=106000; ++i) {
		if (i%6 !=0) {
		sh.moveChunk("deviceAlert.deviceAlert",{"accountId": i, "deviceId": 1},
					 "shard000" + (i%6))
	})
}

db.addUser(
    {
      user: "procon",
      userSource: "proconCore",
      roles: ["readWrite", "dbAdmin"]
    }
)

db.deviceAlert.ensureIndex(
    {
      "accountId": 1,
      "deviceId": 1
    },
    {
      "name": "accountId_1_deviceId_1"
    }
)
db.deviceAlert.ensureIndex(
    {
      "accountId": 1,
      "deviceId": 1,
	  "alertTypeId": 1,
	  "alertDate": -1
    },
    {
      "name": "accountId_1_deviceId_1_alertTypeId_1_alertDate_-1"
    }
)
db.deviceAlert.ensureIndex(
    {
      "accountId": 1,
      "alertSpecId": 1
    },
    {
      "name": "accountId_1_alertSpecId_1"
    }
)
db.deviceAlert.ensureIndex(
    {
      "realert": 1,
      "realertTime": 1
    },
    {
      "name": "realert_1_realertTime_1",
	  "sparse": true
    }
)



