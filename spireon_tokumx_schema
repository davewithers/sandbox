//---------------------------------
//--------- accountDetail ---------
//---------------------------------

use account
db.createCollection("accountDetail")
db.addUser(
    {
      user: "procon",
      roles: ["readWrite", "dbAdmin"],
	  userSource: "proconCore" 
    }
)
db.accountDetail.ensureIndex(
    {
      "key": 1
    }, {
  "name": "key_1"
}
)
db.accountDetail.ensureIndex(
    {
      "accountId": 1
    }, {
  "unique": true,
  "name": "accountId_1",
  "dropDups": true
}
)

